<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/edit_lot_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lot Number"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:importantForAutofill="yes" />

    <TextView
        android:id="@+id/text_lot_number_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:text="This lot number is already used."
        android:visibility="gone"
        android:textSize="13sp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/edit_lot_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:focusable="false"
        android:clickable="true"
        android:inputType="date"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_create_lot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Lot"
        android:layout_marginTop="24dp" />

</LinearLayout> 