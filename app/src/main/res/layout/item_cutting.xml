<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Avatar/Icon -->
        <ImageView
            android:id="@+id/image_cutting_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cutting_custom"
            android:background="@drawable/bg_avatar_circle"
            android:scaleType="centerCrop"
            android:contentDescription="Cutting Icon"
            android:layout_marginEnd="16dp" />

        <!-- Texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_cutting_fabric_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabric Type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/purple_700" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/text_cutting_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.00 kg"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chip_quantity"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text_cutting_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right-side icons (optional, for future actions) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">
            <!-- Add action icons here if needed -->
            <ImageView
                android:id="@+id/image_cutting_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Menu"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 