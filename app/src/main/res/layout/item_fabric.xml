<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Compact Icon -->
        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_fabric"
            android:background="@drawable/bg_avatar_circle"
            android:scaleType="centerCrop"
            android:contentDescription="Fabric Icon"
            android:layout_marginEnd="12dp"/>

        <!-- Compact Main Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_fabric_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabric Type"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/purple_700" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/text_fabric_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.00 kg"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chip_quantity"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/text_fabric_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-07-02"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Compact Action Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/button_transfer"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_sync_arrows"
                android:contentDescription="Transfer"
                android:tint="@color/purple_700"
                android:padding="2dp"
                android:focusable="true"
                android:clickable="true" />

            <ImageView
                android:id="@+id/button_menu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Menu"
                android:tint="@color/purple_700"
                android:padding="2dp"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 