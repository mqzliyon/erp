<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Avatar/Image Placeholder -->
        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_fabric"
            android:background="@drawable/bg_avatar_circle"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar"
            android:layout_marginEnd="16dp" />

        <!-- Texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_fabric_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabric Type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/purple_700" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/text_fabric_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chip_quantity"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text_fabric_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 3-dot icon and Transfer For Cutting button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <ImageButton
                android:id="@+id/button_transfer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_transfer"
                android:contentDescription="Transfer For Cutting"
                android:background="@android:color/transparent"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="More options"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 