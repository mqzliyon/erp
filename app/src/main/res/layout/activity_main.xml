<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/background_section">

    <!-- Custom Top App Bar -->
    <LinearLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/background_section"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_in">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/icon_menu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_menu"
            android:tint="#231F20"
            android:contentDescription="Menu" />

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <!-- Centered Title -->
        <TextView
            android:id="@+id/top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#231F20" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            android:tint="#231F20"
            android:contentDescription="Info"
            android:layout_marginEnd="16dp" />

        <!-- Notification Icon with Red Dot -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_notification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                android:tint="#231F20"
                android:contentDescription="Notifications" />
            <View
                android:id="@+id/notification_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_notification_dot"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp" />
        </FrameLayout>
    </LinearLayout>
    <!-- End Custom Top App Bar -->

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_section">

        <!-- Loading Indicator -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_fileName="loader.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="3"
            android:background="@android:color/transparent"/>

    </FrameLayout>

    <!-- Custom Horizontal Drawer Menu at Bottom -->
    <!-- light lavender -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_section"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/background_section">

            <!-- Dashboard -->
            <LinearLayout
                android:id="@+id/menu_dashboard"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/icon_dashboard"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_dashboard"
                    android:tint="#231F20" />
                <TextView
                    android:id="@+id/label_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textStyle="bold"
                    android:textColor="#231F20"
                    android:visibility="visible"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Fabrics -->
            <LinearLayout
                android:id="@+id/menu_fabrics"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/icon_fabrics"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_fabric"
                    android:tint="#231F20" />
                <TextView
                    android:id="@+id/label_fabrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fabrics"
                    android:textStyle="bold"
                    android:textColor="#231F20"
                    android:visibility="gone"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Cutting -->
            <LinearLayout
                android:id="@+id/menu_cutting"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/icon_cutting"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cutting"
                    android:tint="#231F20" />
                <TextView
                    android:id="@+id/label_cutting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cutting"
                    android:textStyle="bold"
                    android:textColor="#231F20"
                    android:visibility="gone"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Lots -->
            <LinearLayout
                android:id="@+id/menu_lots"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/icon_lots"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_lot"
                    android:tint="#231F20" />
                <TextView
                    android:id="@+id/label_lots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lots"
                    android:textStyle="bold"
                    android:textColor="#231F20"
                    android:visibility="gone"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>