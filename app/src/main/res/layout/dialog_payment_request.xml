<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Payment Request"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Payment Method Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Method *"
        android:textSize="16sp"
        android:textColor="#231F20"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_payment_method"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_edittext_focused_selector"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Invoice Number -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoice Number *"
        android:textSize="16sp"
        android:textColor="#231F20"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_invoice_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter invoice number"
        android:background="@drawable/bg_edittext_focused_selector"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Amount -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount (BDT) *"
        android:textSize="16sp"
        android:textColor="#231F20"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter amount in BDT"
        android:background="@drawable/bg_edittext_focused_selector"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <!-- Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"
        android:textColor="#231F20"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Select date"
        android:background="@drawable/bg_edittext_focused_selector"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_calendar"
        android:layout_marginBottom="16dp" />

    <!-- Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="16sp"
        android:textColor="#231F20"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Select time"
        android:background="@drawable/bg_edittext_focused_selector"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_calendar"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#666666"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btn_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_button"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>

</LinearLayout> 